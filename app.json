{
  "expo": {
    "name": "Thrift",
    "slug": "thrift",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#F5F1EB"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thrift.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture fabric patterns and measurements.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photos to upload tailor portfolios."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F5F1EB"
      },
      "package": "com.thrift.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-secure-store",
      "expo-video"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
