# Server Configuration
PORT=3001
NODE_ENV=development

# Stream Video SDK Configuration
# Get these from: https://getstream.io/ -> Create Video App -> Copy credentials
STREAM_API_KEY=your_api_key_here
STREAM_API_SECRET=your_api_secret_here

# Firebase Admin SDK
# Get this from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_PROJECT_ID=ripaap-44e5f
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@ripaap-44e5f.iam.gserviceaccount.com

# CORS
ALLOWED_ORIGINS=http://localhost:8081,exp://,http://localhost:19006

# Rate Limiting
RATE_LIMIT_MAX=100
